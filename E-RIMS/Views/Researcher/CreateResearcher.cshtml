@{
    ViewBag.Title = "เพิ่มข้อมูลนักวิจัยใหม่";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Researcher")">นักวิจัย</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>จัดการข้อมูลนักวิจัย</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <i class="fa fa-user-circle"></i>&nbsp;@ViewBag.Title
        </h5>
        <hr />

        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-info-circle"></i>&nbsp;ข้อมูลทั่วไป
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>รูปประจำตัว</label>
                                <input type="file" class="form-control-file">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label>คำนำหน้า</label>
                                    <select class="form-control">
                                        <option>นาย</option>
                                        <option>นางสาว</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>ชื่อ :</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group col-md-5">
                                    <label>นามสกุล :</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>เลขประจำตัวประชาชน :</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group col-md-4">
                                    <label>ตำแหน่ง :</label>
                                    <select class="form-control">
                                        <option>...</option>
                                        <option>.....</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>ระดับ :</label>
                                    <select class="form-control">
                                        <option>7</option>
                                        <option>8</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-building"></i>&nbsp;ข้อมูลสำหรับการติดต่อ (ที่ทำงาน)
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="">เบอร์โทรศัพท์</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="">เบอร์โทรศัพท์มือถือ</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="">บ้านเลขที่</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">ถนน</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">ตำบล</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="">อำเภอ</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">จังหวัด</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">รหัสไปรษณีย์</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">อีเมล์สำหรับการติดต่อสื่อสาร</label>
                                <input type="text" class="form-control" id="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-home"></i>&nbsp;ข้อมูลสำหรับการติดต่อ (บ้าน)
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="">เบอร์โทรศัพท์</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="">เบอร์โทรศัพท์มือถือ</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="">บ้านเลขที่</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">ถนน</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">ตำบล</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="">อำเภอ</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">จังหวัด</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">รหัสไปรษณีย์</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">อีเมล์สำหรับการติดต่อสื่อสาร</label>
                                <input type="text" class="form-control" id="">
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-graduation-cap "></i>&nbsp;การศึกษาและความเชี่ยวชาญ
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="">วุฒิการศึกษาสูงสุด</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="">มหาวิทยาลัยที่จบการศึกษา</label>
                                    <input type="text" class="form-control" id="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">ความเชี่ยวชาญ</label>
                                <textarea class="form-control" id="" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="">ประสบการณ์ทำงาน</label>
                                <textarea class="form-control" id="" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="">ผลงานทางวิชาการ</label>
                                <textarea class="form-control" id="" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer text-right">
        <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-save"></i>&nbsp;บันทึก</button>&nbsp;
        <button type="reset" class="btn btn-danger btn-lg"><i class="fa fa-window-close"></i>&nbsp;ยกเลิก</button>
    </div>
</div>

