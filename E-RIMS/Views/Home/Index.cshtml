@model IEnumerable<E_RIMS.Models.PublicRelation>
@{
    ViewBag.Title = "Home Page";
}


@*-----Card Grid*@
<br>
<br>
<h3><strong>ข่าวประชาสัมพันธ์</strong></h3>
<a href="@Url.Action("AllNews","PublicRelation")"><h6 class="text-primary">+จัดการข่าวประชาสัมพันธ์</h6></a>
<div class="container mt-3">
    <div class="row">
        <div class="card-deck">
            @foreach (var item in Model)
            {
                <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                    <img class="card-img-top" src="@Url.Content(item.image)" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.newsName)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.description)<a href="@Url.Action("news"+"/"+item.id,"PublicRelation")">อ่านต่อ</a></p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.date)</small></p>
                    </div>
                </div>
            } 
        </div>


        @*--Pagination*@
        <div>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

