@model E_RIMS.Models.DocumentDownload
@{
    /**/

    ViewBag.Title = "แบบฟอร์มที่เกี่ยวข้อง";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>แบบฟอร์มที่เกี่ยวข้อง</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <i class="fa fa-newspaper"></i>&nbsp;@ViewBag.Title
        </h5>
        <hr />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="card-title">
                            <h4>
                                @Html.DisplayFor(model => model.name) (วันที่อัพโหลด : @Convert.ToDateTime(Model.date).ToString("dd/MM/yyyy"))
                                @if (Session["Role"] != null)
                                {
                                    if (Session["Role"].Equals("Admin"))
                                    {
                                        <a href="@Url.Action("EditDownloadDocument"+"/"+Model.id, "DocumentDownload")" class="btn btn-success text-right"><i class="fa fa-edit"></i>&nbsp;แก้ไข</a>
                                    }
                                }
                            </h4>
                        </div>
                        <p>@Html.DisplayFor(model => model.description)</p>
                        <p><a href="@Url.Content(Model.docUpload ?? "~/Image/no-document.png")" class="btn btn-info"><i class="fa fa-download"></i>&nbsp;ดาวน์โหลดเอกสาร</a></p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <p>จำนวนผู้เข้าชม: @Html.DisplayFor(model => model.views) ครั้ง</p>
            </div>
        </div>
    </div>
</div>

