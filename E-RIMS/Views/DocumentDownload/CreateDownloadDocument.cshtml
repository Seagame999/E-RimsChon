@model E_RIMS.Models.DocumentDownload
@{
    ViewBag.Title = "เพิ่มแบบฟอร์มที่เกี่ยวข้องใหม่";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "DocumentDownload")">แบบฟอร์มที่เกียวข้อง</a></li>
        <li class="breadcrumb-item active" aria-current="page">เพิ่มแบบฟอร์มที่เกี่ยวข้องใหม่</li>
    </ol>
</nav>

@using (Html.BeginForm(Html.BeginForm("CreateDownloadDocument", "DocumentDownload", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h3>จัดการแบบฟอร์มที่เกี่ยวข้อง</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title"><i class="fa fa-book-medical"></i>&nbsp;@ViewBag.Title</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />
            <div class="form-row">
                <div class="form-group col-4">
                    <label for="documentName"><i class="fa fa-book"></i>&nbsp;ชื่อเรียกเอกสาร</label>
                    <input type="text" class="form-control" id="documentName" placeholder="ชื่อเรียกเอกสาร" name="name" required>
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-4">
                    <label for="documentDesc"><i class="fa fa-info"></i>&nbsp;รายละเอียดไฟล์เอกสาร</label>
                    <textarea class="form-control" id="documentDesc" rows="3" placeholder="รายละเอียดวารสาร" name="description" required></textarea>
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-4">
                    <label for="documentFile"><i class="fa fa-image"></i>&nbsp;ไฟล์เอกสารดาวน์โหลด</label>
                    <input type="file" class="form-control-file" placeholder="ไฟล์เอกสารสำหรับดาวน์โหลด *.pdf, *.docx" id="documentFile" name="docUpload2">
                    @Html.ValidationMessageFor(model => model.docUpload2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12 text-right">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success text-center"><i class="fa fa-check-circle"></i>&nbsp;บันทึก</button>
                        <button type="reset" class="btn btn-danger text-center"><i class="fa fa-times-circle"></i>&nbsp;ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}