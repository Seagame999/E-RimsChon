@model E_RIMS.Models.PublicRelation

@{
    ViewBag.Title = "รายละเอียดข่าวประชาสัมพันธ์";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>ข่าวประชาสัมพันธ์</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <i class="fa fa-newspaper"></i>&nbsp;@ViewBag.Title
        </h5>
        <hr />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-4"><img src="@Url.Content(Model.image)" class="img-fluid border-dark" /></div>
                    <div class="col-8">
                        <div class="card-title">
                            <h4>@Model.newsName (@Model.date)</h4>
                        </div>
                        <p>@Model.description</p>
                        <p><a href="@Url.Content(Model.docUpload)" class="btn btn-info"><i class="fa fa-download"></i>&nbsp;ดาวน์โหลดเอกสารประกอบ</a></p>
                    </div>
                </div>

            </div>
            <div class="card-footer text-right">
                <p>จำนวนผู้เข้าชม: @Model.views ครั้ง</p>
            </div>
        </div>
    </div>
</div>
