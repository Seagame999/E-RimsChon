@model IEnumerable<E_RIMS.Models.PublicRelation>


@{
    ViewBag.Title = "AllNews";
}
<br><br>
<h3><strong>ข่าวประชาสัมพันธ์</strong></h3>
<hr>

<a href="@Url.Action("CreateNews","PublicRelation")"><h6 class="text-primary">+เพิ่มข่าวประชาสัมพันธ์</h6></a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ที่</th>
            <th scope="col">ชื่อเรื่อง</th>
            <th scope="col">รายละเอียด</th>
            <th scope="col">HTML Link</th>
            <th scope="col">เอกสาร</th>
            <th scope="col">การกระทำ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>@Html.DisplayFor(modelItem => item.newsName)</td>
                <td>@Html.DisplayFor(modelItem => item.description)</td>
                <td>@Html.DisplayFor(modelItem => item.htmlLink)</td>
                <td><a href="@Html.DisplayFor(modelItem => item.docUpload)"><img src="~/Image/download-solid.svg" width="20"height="20"></a></td>
                <td><a href="@Url.Action("Edit"+"/"+item.id,"PublicRelation")"><img src="~/Image/pencil-alt-solid.svg" width="20" height="20"></a>&nbsp;<a href="@Url.Action("Delete"+"/"+item.id,"PublicRelation")"><img src="~/Image/trash-alt-regular.svg" width="20" height="20"></a></td>

            </tr>
        }

        </tbody>
</table>

<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>