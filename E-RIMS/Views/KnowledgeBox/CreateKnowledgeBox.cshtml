@model E_RIMS.Models.KnowledgeBox
@{
    ViewBag.Title = "เพิ่มเอกสารความรู้";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "KnowledgeBox")">เอกสารความรู้</a></li>
        <li class="breadcrumb-item active" aria-current="page">เพิ่มเอกสารความรู้ใหม่</li>
    </ol>
</nav>

@using (Html.BeginForm(Html.BeginForm("CreateKnowledgeBox", "KnowledgeBox", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h3>จัดการเอกสารความรู้</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title"><i class="fa fa-book-medical"></i>&nbsp;@ViewBag.Title</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />
            <div class="form-row">
                <div class="form-group col-4">
                    <label for=""><i class="fa fa-book"></i>&nbsp;ชื่อเอกสารความรู้</label>
                    <input type="text" class="form-control" name="name" required>
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-4">
                    <label for=""><i class="fa fa-info"></i>&nbsp;รายละเอียด</label>
                    <textarea class="form-control" rows="3" name="description" required></textarea>
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-4">
                    <label for=""><i class="fa fa-image"></i>&nbsp;อัพโหลดไฟล์</label>
                    <input type="file" class="form-control-file" name="docUpload2">
                    @Html.ValidationMessageFor(model => model.docUpload2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12 text-right">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success text-center"><i class="fa fa-check-circle"></i>&nbsp;บันทึก</button>
                        <button type="reset" class="btn btn-danger text-center"><i class="fa fa-times-circle"></i>&nbsp;ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}