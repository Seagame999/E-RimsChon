@model E_RIMS.Models.KnowledgeBox
@{
    ViewBag.Title = "แก้ไขข้อมูลเอกสารความรู้";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "KnowledgeBox")">เอกสารความรู้</a></li>
        <li class="breadcrumb-item active" aria-current="page">แก้ไขข้อมูลเอกสารความรู้</li>
    </ol>
</nav>

@using (Html.BeginForm(Html.BeginForm("EditKnowledgeBox", "KnowledgeBox", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h3>จัดการกล่องความรู้</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title"><i class="fa fa-book-medical"></i>&nbsp;@ViewBag.Title</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />
            <div class="form-row">
                <div class="form-group col-6">
                    <label><i class="fa fa-book"></i>&nbsp;ชื่อกล่องความรู้</label>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label><i class="fa fa-info"></i>&nbsp;รายละเอียด</label>
                    @Html.TextAreaFor(model => model.description, new { @class = "form-control", @rows = 3 })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-6">
                    <label>&nbsp;ไฟล์กล่องความรู้</label>
                    <br />
                    <label class="">ไฟล์เดิม: <a href="@Model.docUpload" class="btn btn-info"><i class="fa fa-file-download"></i>&nbsp;ดาวน์โหลด</a></label>
                    <input type="hidden" class="form-control-file" name="docUpload" value="@Model.docUpload">
                    <br />
                    <label class="">หรือ อัพโหลดไฟล์ใหม่</label>
                    <input type="file" class="form-control-file" name="docUpload2">
                    @Html.ValidationMessageFor(model => model.docUpload2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12 text-right">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success text-center"><i class="fa fa-check-circle"></i>&nbsp;บันทึก</button>
                        <button type="reset" class="btn btn-danger text-center"><i class="fa fa-times-circle"></i>&nbsp;ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



