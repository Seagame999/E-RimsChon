@model E_RIMS.Models.Innovation
@{
    /**/

    ViewBag.Title = "แก้ไขสถานะกิจกรรม";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkTracking")">กำกับติดตามงาน</a></li>
        <li class="breadcrumb-item" aria-current="page">@ViewBag.Title</li>
        <li class="breadcrumb-item active" aria-current="page">@Model.name</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>@ViewBag.Title</h3>
    </div>
    @using (Html.BeginForm(Html.BeginForm("updateInnovationActivityStatus7", "WorkTracking", FormMethod.Post, new { enctype = "multipart/form-data" })))
    {
        <div class="card-body">
            <div class="card">
                <div class="card-body">
                    <div class="card-title h5">
                        ชื่องานวิจัย: @Model.name
                    </div>
                    <div class="row">
                        <div class="col">ผู้วิจัย: @Model.creator</div>
                        <div class="col">กิจกรรม: @Model.activity7</div>
                    </div>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-body">
                    <div class="card-title h5">
                        <i class="fa"></i>&nbsp;วางแผน
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="">ผลการดำเนินงาน</label>
                            @Html.TextAreaFor(model => model.planStatusActivity7, new { @class = "form-control", @cols = 50, style = "height : 150px;" })
                        </div>
                        <div class="form-group col-6">
                            <label class="">เอกสารประกอบ</label>
                            <input type="file" class="form-control" name="filePlanStatusActivity7HttpPost" />
                            <input type="hidden" name="filePlanStatusActivity7" value="@Model.filePlanStatusActivity7">
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-body">
                    <div class="card-title h5">
                        <i class="fa"></i>&nbsp;ดำเนินการ
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="">ผลการดำเนินงาน</label>
                            @Html.TextAreaFor(model => model.proceedStatusActivity7, new { @class = "form-control", @cols = 50, style = "height : 150px;" })
                        </div>
                        <div class="form-group col-6">
                            <label class="">เอกสารประกอบ</label>
                            <input type="file" class="form-control" name="fileProceedStatusActivity7HttpPost" />
                            <input type="hidden" name="fileProceedStatusActivity7" value="@Model.fileProceedStatusActivity7">
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-body">
                    <div class="card-title h5">
                        <i class="fa"></i>&nbsp;เสร็จสิ้น
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="">ผลการดำเนินงาน</label>
                            @Html.TextAreaFor(model => model.finishStatusActivity7, new { @class = "form-control", @cols = 50, style = "height : 150px;" })
                        </div>
                        <div class="form-group col-6">
                            <label class="">เอกสารประกอบ</label>
                            <input type="file" class="form-control" name="fileFinishStatusActivity7HttpPost" />
                            <input type="hidden" name="fileFinishStatusActivity7" value="@Model.fileFinishStatusActivity7">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-success">ปรับปรุงสถานะกิจกรรม</button>&nbsp;<button type="reset" class="btn btn-danger">ยกเลิก</button>
        </div>
    }

</div>
