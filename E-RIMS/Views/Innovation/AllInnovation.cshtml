@model IPagedList<E_RIMS.Models.Innovation>
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "งานนวัตกรรม";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">หน้าแรก</a></li>
        <li class="breadcrumb-item active">งานนวัตกรรม</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>จัดการนวัตกรรม&nbsp;<a href="@Url.Action("CreateInnovation", "Innovation")" class="btn btn-info"><i class="fa fa-plus"></i>&nbsp;เพิ่มงานนวัตกรรมชิ้นใหม่</a></h3>
    </div>
    <div class="card-body">
        <h5 class="card-title"><i class="fa fa-book-medical"></i>&nbsp;@ViewBag.Title</h5>
        <hr />
        <br />
        <h5 class="card-title">รายงานนวัตกรรม</h5>
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">ปีงบประมาณ</th>
                    <th scope="col">นวัตกรรม</th>
                    <th scope="col">ประเภท</th>
                    <th scope="col">นวัตกร</th>
                    <th scope="col">กลุ่มงาน</th>
                    <th scope="col">การกระทำ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.budgetYear)</td>
                        <td><a href="@Url.Action("DetailInnovation"+"/"+item.id,"Innovation")">@Html.DisplayFor(modelItem => item.name)</a></td>
                        <td>@Html.DisplayFor(modelItem => item.type)</td>
                        <td>@Html.DisplayFor(modelItem => item.creator)</td>
                        <td>@Html.DisplayFor(modelItem => item.workGroup)</td>
                        <td class="text-nowrap"><a href="@Url.Action("EditInnovation"+"/"+item.id,"Innovation")" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i>&nbsp;แก้ไข</a>&nbsp;<a href="#" class="btn btn-sm btn-danger"><i class="fa fa-eraser"></i>&nbsp;ลบ</a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="text-center">
                        <div class="row">
                            <div class="col-6"></div>
                            <div class="col-6">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

