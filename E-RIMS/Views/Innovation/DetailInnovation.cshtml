@model E_RIMS.Models.Innovation

@{
    ViewBag.Title = "ข้อมูลนวัตกรรม";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">หน้าแรก</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Innovation")">นวัตกรรม</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h3>จัดการข้อมูลนวัตกรรม</h3>
    </div>
    <form>
        <div class="card-body">
            <h5 class="card-title">
                <i class="fa fa-book-medical"></i>&nbsp;@ViewBag.Title
            </h5>
            <hr />

            <div class="form-row">
                <div class="form-group col-2">
                    <label class="">ประเภท</label>
                    <label class="form-control">@Model.type</label>
                </div>
                <div class="form-group col-10">
                    <label class="">ชื่อเรื่อง</label>
                    <label class="form-control">@Model.name</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label class="">ผู้จัดทำ</label>
                    <label class="form-control">@Model.creator</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label class="">ที่มาและความสำคัญ</label>
                    <textarea class="form-control" rows="5">@Model.backgroudAndImportance</textarea>
                </div>
                <div class="form-group col-6 text-center">
                    <a href="@Model.finalFiles" target="_blank" class="btn btn-info" style="margin-top:50px;"><i class="fa fa-file-download"></i>&nbsp;ดาวน์โหลดไฟล์เอกสารนวัตกรรม</a>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-10"></div>
                <div class="form-group col-2">จำนวนผู้เข้าชม: @Model.views ครั้ง</div>
            </div>
        </div>
    </form>
</div>
